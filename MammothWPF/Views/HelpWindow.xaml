<Window x:Class="MammothHunting.Views.HelpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Help" Background="#FF333333">
    <Grid>
        <Border BorderBrush="White" BorderThickness="2" CornerRadius="10" 
                VerticalAlignment="Center" HorizontalAlignment="Center" 
                Padding="20" Background="#FF222222">
            <StackPanel>
                <TextBlock Text="=== Help ===" 
                         FontSize="24" Foreground="White" 
                         HorizontalAlignment="Center" Margin="0,0,0,20"/>

                <TextBlock Text="Game Rules:" 
                          FontSize="18" Foreground="White" 
                          Margin="0,0,0,10" FontWeight="Bold"/>

                <TextBlock Text="1. Use arrow keys to move the hunter." 
                          FontSize="16" Foreground="White" Margin="10,0,0,5"/>

                <TextBlock Text="2. Press spacebar to throw a spear." 
                          FontSize="16" Foreground="White" Margin="10,0,0,5"/>

                <TextBlock Text="3. Avoid collisions with map boundaries." 
                          FontSize="16" Foreground="White" Margin="10,0,0,5"/>

                <TextBlock Text="4. Hit the mammoth with your spear to win." 
                          FontSize="16" Foreground="White" Margin="10,0,0,5"/>

                <TextBlock Text="5. Press Esc to return to the main menu." 
                          FontSize="16" Foreground="White" Margin="10,0,0,20"/>

                <TextBlock Text="================" 
                          FontSize="24" Foreground="White" 
                          HorizontalAlignment="Center" Margin="0,0,0,10"/>

                <TextBlock Text="Press ESC to return to the main menu..." 
                          FontSize="14" Foreground="LightGray" 
                          HorizontalAlignment="Center" FontStyle="Italic"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>